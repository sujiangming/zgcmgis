<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorIndexFragmentBg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/index_1_white"
        android:drawablePadding="@dimen/space_12_dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_12_dp"
        android:text="@string/main_tab_txt1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_16_sp" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/space_44_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ExpandableListView
                android:id="@+id/lv_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:childDivider="@null"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:groupIndicator="@null"
                android:scrollbars="none" />

            <include
                android:id="@+id/no_data"
                layout="@layout/common_no_data"
                android:visibility="gone" />

        </LinearLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>