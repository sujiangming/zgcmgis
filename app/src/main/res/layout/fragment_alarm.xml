<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/btn_alarm_n_white3x"
        android:drawablePadding="@dimen/space_12_dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_12_dp"
        android:text="@string/main_tab_txt3"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_16_sp" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorIndexFragmentBg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_alarm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/colorIndexFragmentBg"
                android:dividerHeight="@dimen/space_1_px"
                android:visibility="visible">

            </ListView>

            <include
                android:id="@+id/no_data"
                layout="@layout/common_no_data"
                android:visibility="gone" />

        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>