<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorIndexFragmentBg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_map_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        android:drawablePadding="@dimen/space_12_dp"
        android:gravity="center"
        android:paddingLeft="@dimen/space_12_dp"
        android:text="@string/main_tab_txt2"
        android:textColor="@color/color353535"
        android:textSize="@dimen/font_16_sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1_px"
        android:background="#E8E7E7" />

    <com.baidu.mapapi.map.TextureMapView
        android:id="@+id/mTexturemap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.baidu.mapapi.map.TextureMapView>
</LinearLayout>