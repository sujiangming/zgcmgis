<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        android:drawablePadding="@dimen/space_12_dp"
        android:gravity="center"
        android:text="@string/main_tab_txt3"
        android:textColor="@color/color353535"
        android:textSize="@dimen/font_16_sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1_px"
        android:background="#E8E7E7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/map_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cicle"
            android:gravity="center"
            android:text="扫一扫"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_16_sp" />

    </LinearLayout>
</LinearLayout>