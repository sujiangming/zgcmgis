<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/iv_main"
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/space_20_dp"
            android:layout_height="@dimen/space_20_dp"
            android:layout_alignRight="@id/iv_main"
            android:layout_alignTop="@id/iv_main"
            android:src="@drawable/btn_delimg3" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_space"
        android:layout_width="@dimen/space_5_dp"
        android:layout_height="match_parent"
        android:background="@android:color/white" />
</LinearLayout>